/*!**
  title: Headers
  section: Typography
  example: |
    <h1>H1 Header</h1>
    <h2>H2 Header</h2>
    <h3>H3 Header</h3>
    <h4>H4 Header</h4>
    <h5>H5 Header</h5>
    <h6>H6 Header</h6>
***/

h1, h2, h3, h4, h5, h6
  // text-rendering optimizeLegibility
  font-smooth always
  -moz-osx-font-smoothing: grayscale
  font-family headerfont
  
h1, h2, h3, h4, h5, h6, p, li
  font-weight: normal
  color inherit
  
h1
  fs(3rem)
  padding-bottom 10px
  color red
  
p, ul
  fs(1.6rem)
  line-height 1.2
  color blue
  padding-bottom 10px